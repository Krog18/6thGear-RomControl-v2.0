<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="Unlock After Reboot Toggles">
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:title="Fingerprint unlock after reboot"
        android:summaryOff="Disabled"
        android:summaryOn="Enabled"
        android:defaultValue="false"
        android:key="fingerprint_unlock" />
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:title="Use biometrics after reboot"
        android:summaryOff="Disabled"
        android:summaryOn="Enabled"
        android:defaultValue="false"
        android:key="agc_biometric_on_boot" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Screen Wake With USB Plug">
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:title="USB plug in/out wakeup"
        android:key="usb_plugged"
        android:defaultValue="true"
        android:summaryOn="On"
        android:summaryOff="Off" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Safe Volume Toggle">
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:title="Safe Volume Warning"
        android:defaultValue="true"
        android:key="b_aviso_volumen"
        android:summaryOn="Enabled"
        android:summaryOff="Disabled"  />
    </PreferenceCategory>
</PreferenceScreen>