<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceScreen android:title="Battery Settings" android:summary="Configure Battery Display">
        <PreferenceCategory
            android:title="Battery Bar">
            <PreferenceScreen android:title="Battery Bar" android:summary="Battery Bar Preferences">
                <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/battery_bar_entries" android:title="Battery Bar" android:key="battery_bar" android:summary="%s" android:defaultValue="1" android:entryValues="@array/battery_bar_values" />
                <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/battery_bar_style_entries" android:title="Battery bar style" android:key="battery_bar_style" android:summary="%s" android:defaultValue="1" android:entryValues="@array/battery_bar_style_values" />
                <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/battery_bar_thickness_entries" android:title="Thickness of battery bar" android:key="battery_bar_thickness" android:summary="%s" android:defaultValue="2" android:entryValues="@array/battery_bar_thickness_values" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Battery Bar Color" android:key="battery_bar_color" android:summary="Choose color of battery bar" android:defaultValue="-1" hexValue="true" alphaSlider="true" />
            </PreferenceScreen>
        </PreferenceCategory>
        <PreferenceCategory
            android:title="Battery Display" />
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Show/hide 3minit battery" android:key="switch_3minit_visible" android:defaultValue="false" android:summaryOn="On" android:summaryOff="Off" app:packageNameToKill="com.android.systemui" app:isSilent="false" />
        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference android:title="3Minit Battery Settings" app:componentName="com.three.minit.minitbatterysettings.free/com.three.minit.minitbatterysettings.MainActivity" />
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Show/hide stock battery" android:key="stock_battery_visibility" android:defaultValue="true" android:summaryOn="On" android:summaryOff="Off" app:packageNameToKill="com.android.systemui" app:isSilent="false" />
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Display percentages" android:key="display_battery_percentage" android:defaultValue="false" android:summaryOn="On" android:summaryOff="Off" />
        <PreferenceScreen android:title="Battery and Percent Color">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Battery and Percent Color" android:key="wbr_main_battery_color" android:defaultValue="false" android:summaryOn="On" android:summaryOff="Default" app:packageNameToKill="com.android.systemui" app:isSilent="false" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Battery Lightning Charge Color" android:key="wbr_lightning" android:dependency="wbr_main_battery_color" android:defaultValue="\#ff222222" app:packageNameToKill="com.android.systemui" app:isSilent="false" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Battery Level Background Color" android:key="wbr_batterylevelbackground" android:dependency="wbr_main_battery_color" android:defaultValue="\#ffffffff" app:packageNameToKill="com.android.systemui" app:isSilent="false" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Battery Level" android:key="wbr_batteryframe" android:dependency="wbr_main_battery_color" android:defaultValue="\#ffffffff" app:packageNameToKill="com.android.systemui" app:isSilent="false" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Battery Percentage Color" android:key="percent" android:dependency="wbr_main_battery_color" android:defaultValue="\#ffffffff" app:packageNameToKill="com.android.systemui" app:isSilent="false" />
        </PreferenceScreen>
    </PreferenceScreen>
    <com.wubydax.romcontrol.v2.prefs.ThumbnailListPreference android:title="Select alarm icon" android:key="statusbar_alarm_icon_select" android:defaultValue="1" app:packageNameToKill="com.android.systemui" app:isSilent="false" app:drawableArray="@array/statusbar_alarm_icon_drawables" app:entryList="@array/statusbar_alarm_icon_entries" app:entryValuesList="@array/statusbar_alarm_icon_values" />
    <com.wubydax.romcontrol.v2.prefs.ThumbnailListPreference android:title="Select geolocation icon" android:key="statusbar_gps_icon_select" android:defaultValue="1" app:packageNameToKill="com.android.systemui" app:isSilent="false" app:drawableArray="@array/statusbar_gps_icon_drawables" app:entryList="@array/statusbar_gps_icon_entries" app:entryValuesList="@array/statusbar_gps_icon_values" />
    <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/status_bar_icon_scale_factor_entries" android:title="Size of the system icons" android:key="status_bar_icon_scale_factor_select" app:packageNameToKill="com.android.systemui" app:isSilent="false" android:defaultValue="0" android:entryValues="@array/status_bar_icon_scale_factor_values" />
    <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/status_bar_icon_scale_factor_entries" android:title="Battery icon size" android:key="battery_icon_scale_factor_select" app:packageNameToKill="com.android.systemui" app:isSilent="false" android:defaultValue="0" android:entryValues="@array/status_bar_icon_scale_factor_values" />
</PreferenceScreen>